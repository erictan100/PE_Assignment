<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".initialFragment.stat.StatisticFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameLayout">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="270dp"
                android:layout_height="164dp"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#098FC8"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Active Cases"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/value_active"
                    android:layout_width="272dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="65dp"
                    android:gravity="center"
                    android:text="Active cases"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="272dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="91dp"
                    android:gravity="center"
                    android:text="setakat 10 April 2022 23:59"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="270dp"
                android:layout_height="164dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="42dp"
                app:cardBackgroundColor="#FF0000"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="New Cases"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/value_confirmed"
                    android:layout_width="272dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="65dp"
                    android:gravity="center"
                    android:text="New cases"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/date2"
                    android:layout_width="272dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="91dp"
                    android:gravity="center"
                    android:text="setakat 10 April 2022 23:59"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="270dp"
                android:layout_height="164dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="42dp"
                app:cardBackgroundColor="#00FF00"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="272dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Total Recovered"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/value_recovered"
                    android:layout_width="272dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="65dp"
                    android:gravity="center"
                    android:text="Total Recovered"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/date3"
                    android:layout_width="272dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="91dp"
                    android:gravity="center"
                    android:text="setakat 10 April 2022 23:59"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/scrollView2" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>