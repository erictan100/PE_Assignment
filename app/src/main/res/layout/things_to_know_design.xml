<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_things_to_know"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/covidnews" />

        <ImageView
            android:id="@+id/things_to_know_author_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/img_things_to_know"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_kkm" />

        <TextView
            android:id="@+id/things_to_know_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_things_to_know"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/things_to_know_author_logo"
            android:fontFamily="@font/lemon"
            android:text="McDonald's"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/things_to_know_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/things_to_know_author_logo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/imprima"
            android:text="Offical Website"
            android:textColor="#6D6B6B"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/things_to_know_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/things_to_know_title"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/imprima"
            android:text="sadasdasdsadsadsadsddasdsadaads"
            android:textColor="#6D6B6B"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>