<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VaccineStatusActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_vaccine_status"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:background="@drawable/schedule_vaccine_card_background"
            android:elevation="20dp"
            android:paddingBottom="40dp">

            <RelativeLayout
                android:id="@+id/rl_vaccine_status_title"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/vaccine_status_title_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/lemon"
                    android:text="@string/vaccine_status"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_vaccine_status_title"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon"
                    android:text="Name"
                    android:textColor="@color/font_grey"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_txt"
                    android:fontFamily="@font/lemon"
                    android:text="WEP"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ic_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lemon"
                    android:text="IC/Passport No"
                    android:textColor="@color/font_grey"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_txt"
                    android:fontFamily="@font/lemon"
                    android:text="000000-00-0000"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lemon"
                    android:text="16/4/2022"
                    android:textColor="@color/font_grey"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_txt"
                    android:fontFamily="@font/lemon"
                    android:text="WEP"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/vaccine_location_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lemon"
                    android:text="Vaccine Location"
                    android:textColor="@color/font_grey"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/vaccine_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vaccine_location_txt"
                    android:fontFamily="@font/lemon"
                    android:text="One Utama"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/vaccine_dose_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vaccine_location"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lemon"
                    android:text="Vaccine Dose"
                    android:textColor="@color/font_grey"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/vaccine_dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vaccine_dose_txt"
                    android:fontFamily="@font/lemon"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/rl_vaccine_status"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/back" />


    </RelativeLayout>

</RelativeLayout>