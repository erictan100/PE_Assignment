<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".initialFragment.scan.ScannerCheckInFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="140dp"
        app:cardCornerRadius="70dp"
        >


        <TextView
            android:id="@+id/textView26"
            android:layout_width="312dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:text="Location: " />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="312dp"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:text="Check-In Location" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="312dp"
            android:layout_height="25dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:text="Name: " />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="312dp"
            android:layout_height="25dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:text="XXX" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="312dp"
            android:layout_height="25dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:text="Status: " />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="312dp"
            android:layout_height="25dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:text="Check-In" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:text="Date: " />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="135dp"
            android:layout_height="37dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:text="Check-In Date" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="250dp"
            android:textSize="20dp"
            android:text="Time: " />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="135dp"
            android:layout_height="37dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="250dp"
            android:textSize="20dp"
            android:text="Check-In Time" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="350dp"
            android:textColor="@color/black"
            android:text="Back to Home Page"
            android:backgroundTint="@color/Sassy_Yellow"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView36"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="520dp"
        android:gravity="center"
        android:text="You have checked in. Thanks for using WEP tracing. \nProtect yourself, protect others." />

</FrameLayout>