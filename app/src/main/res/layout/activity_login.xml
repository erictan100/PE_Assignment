<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/weplogo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp">

        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemon"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_login"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/imprima"
            android:text="To continue to our application"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp">

        <EditText
            android:id="@+id/edittxt_ic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext_bg"
            android:elevation="10dp"
            android:fontFamily="@font/imprima"
            android:hint="IC/Passport No."
            android:padding="15dp"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/edittxt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittxt_ic"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_edittext_bg"
            android:elevation="10dp"
            android:fontFamily="@font/imprima"
            android:hint="Password"
            android:padding="15dp"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="italic" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittxt_password"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_btn_bg"
            android:fontFamily="@font/lemon"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/imprima"
            android:text="No Account?"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/imprima"
            android:text="Register Now"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/txt_otherloginoption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/lemon"
            android:text="or Login with"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_twitter"
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:layout_below="@id/txt_otherloginoption"
            android:layout_marginTop="15dp"
            android:background="@drawable/otherloginoption_btn_bg"
            android:backgroundTint="#3FCCDF"
            android:elevation="10dp"
            android:fontFamily="@font/imprima"
            android:text="Twitter"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_facebook"
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:layout_below="@id/txt_otherloginoption"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/otherloginoption_btn_bg"
            android:backgroundTint="#3093EF"
            android:elevation="10dp"
            android:fontFamily="@font/imprima"
            android:text="Facebook"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>